# FAMO TrafficApp - Umgebungsvariablen
# Kopiere diese Datei zu .env und passe die Werte nach Bedarf an

# App
APP_ENV=dev
TZ=Europe/Berlin

# DB
DATABASE_URL=sqlite:///data/traffic.db
DB_SCHEMA=public

# Filesystem
ORIG_DIR=./Tourplaene
STAGING_DIR=./data/staging
OUTPUT_DIR=./data/output
BACKUP_DIR=./routen

# CSV
IN_ENCODING=cp850
CSV_SEP=;
VERIFY_ORIG_ON_INGEST=1

# Geocoding
GEOCODER_BASE=https://nominatim.openstreetmap.org/search
GEOCODER_CONTACT=
GEOCODER_RPS=1
GEOCODER_TIMEOUT_S=20

# Geocoding Enforcement
GEOCODE_ENFORCE=1              # 1=Match erzwingt Geocoding fehlender Adressen
GEOCODE_BATCH_LIMIT=25         # max. Adressen pro Match-Aufruf geokodieren
GEOCODE_NO_RESULT_TO_MANUAL=1  # 1=No-hit landet automatisch in Manual-Queue

# Logging
LOG_LEVEL=INFO
LOG_ACCESS_LEVEL=WARNING

# API
API_BASE=http://127.0.0.1:8111
